{
  "manifest_version": 2,
  "name": "Spatial Tab Switcher",
  "version": "1.0",
  "description": "Minimal 2D spatial tab switcher",
  
  "permissions": [
    "tabs",
    "<all_urls>"
  ],
  
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  
  "commands": {
    "toggle-tab-switcher": {
      "suggested_key": {
        "default": "Ctrl+Shift+Space"
      },
      "description": "Toggle tab switcher"
    }
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["overlay.css"],
      "run_at": "document_end"
    }
  ]
}
